{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "out",
    "rootDir": "src",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["vscode", "node"],
    "paths": {
      "vscode.git": ["./src/plugins/git/gitTypes"]
    }
  },
  "include": ["src/**/*"]
}

